<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitConverter.MainPage">

    <StackLayout x:Name="mainStackLayout" Padding="5, 5, 5, 5">
        <Label Text="Converter" TextColor="SkyBlue" FontSize="20" HorizontalOptions="Center" />
        <Picker x:Name="categoryPicker" Title="Category" SelectedIndexChanged="categoryPicker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>Length</x:String>
                <x:String>Weight</x:String>
                <x:String>Speed</x:String>
            </Picker.Items>
        </Picker>
        <StackLayout Orientation="Horizontal">
            <Frame x:Name="rawValue" BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="8" VerticalOptions="FillAndExpand">
                <Label x:Name="rawValueLabel" Text="0" FontSize="Large"/>
            </Frame>
            <Frame x:Name="processedValue" BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="8" VerticalOptions="CenterAndExpand">
                <Label x:Name="processedValueLabel" Text="0" FontSize="Large"/>
            </Frame>
        </StackLayout>
    </StackLayout>
    
</ContentPage>
